_k_tm_sec() {
   echo $(date '+%s')
}

_k_tm_convert() {
   local sec format
   sec=$1
   shift 1
   format=$*
   [ ! -n "$sec" -o "$sec" == "null" -o "$sec" == "now" ] && sec=$(_k_tm_sec)
   [ -n "$format" ] || format="%Y-%m-%d %H:%M:%S"
   #echo $(date --date="@$sec" "+%Y-%m-%d %H:%M:%S")
   echo $(date --date="@$sec" "+$format")
}
